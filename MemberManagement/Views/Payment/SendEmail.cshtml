@model MemberManagement.Utilities.Email

@{
    ViewBag.Title = "Send Email";
}
<h4>@ViewBag.Title</h4>
<hr />

<form class="border-da" asp-controller="payment" asp-action="SendEmail" method="post">
    <fieldset class="border p-5">
        <legend class="w-auto" style="color: #931420;"><strong>Email information</strong></legend>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group col">
            <div class="col-sm-10">

                <select id="RoleType" name="RoleType" onchange="displayOrHideTo();">
                    <option value="">Send Email T0...</option>
                    @foreach (string msg in ViewBag.message)
                    {
                        <option value="@msg">@msg</option>

                    }
                </select>
            </div>
        </div>

        <div class="form-group col" id="To">
            <div class="col-sm-2"><label asp-for="To" class="control-label"></label></div>
            <div class="col-sm-6"><input asp-for="To" class="form-control" /></div>
            <div class="col"><span asp-validation-for="To" class="text-danger"></span></div>
        </div>

        <div class="form-group col">
            <div class="col-sm-2"><label asp-for="Subject" class="control-label"></label></div>
            <div class="col-sm-6"><input asp-for="Subject" class="form-control" /></div>
            <div class="col"><span asp-validation-for="Subject" class="text-danger"></span></div>
        </div>
        <div class="form-group col">
            <div class="col-sm-2"><label asp-for="Body" class="control-label"></label></div>
            <div class="col-sm-6"><textarea asp-for="Body" class="form-control" rows="6" cols="15"></textarea></div>
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>
        <div class="form-group col">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Send Email</button>
                <a asp-action="Index" class="btn btn-primary">Cancel</a>
            </div>
        </div>
        <hr />
    </fieldset>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts
    {
    <script src="~/js/ChangeType.js"></script>
}