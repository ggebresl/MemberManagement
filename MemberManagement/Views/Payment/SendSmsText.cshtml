@using MemberManagement.Utilities;
@model TwilioSms

@{
    ViewBag.Title = "Send SMS Text";

}

<h4>@ViewBag.Title</h4>
<hr />
<form class="border-da" asp-controller="payment" asp-action="SendSmsText" method="post">
    <fieldset class="border p-5">
        <legend class="w-auto" style="color: #931420;"><strong>Text message information</strong></legend>
        <div class="form-group row">
            <div class="col-sm-10">
                <select id ="RoleType" name="RoleType" onchange="displayOrHidePhone();">
                    <option value="">Send Text To...</option>

                    @foreach (string msg in ViewBag.message)
                    {
                        <option value="@msg">@msg</option>

                    }
                </select>
            </div>
        </div>
        <div class="form-group col" id="Phone">
            <div class="col-sm-2"><label asp-for="Phone" class="control-label"></label></div>
            <div class="col-sm-2"><input asp-for="Phone" class="form-control" /></div>
            <div class="col"><span asp-validation-for="Phone" class="text-danger"></span></div>
        </div>

        <div class="form-group col">
            <div class="col-sm-2"><label asp-for="Text"></label></div>
            <div class="col-sm-8"><textarea asp-for="Text" class="form-control" rows="6" cols="15"></textarea></div>
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group col">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Send Text</button>
                <a asp-action="Index" class="btn btn-primary">Cancel</a>
            </div>
        </div>

        <hr />
    </fieldset>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>



@section Scripts
    {
    <script src="~/js/ChangeType.js"></script>
}