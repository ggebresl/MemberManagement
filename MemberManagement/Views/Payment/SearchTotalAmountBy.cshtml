@using MemberManagement.Models;
@model Search
@{
    ViewBag.Title = "Search by";
}

<h5>Search Total Amount By: </h5>



<form asp-controller="payment" asp-action="SearchTotalAmountBy" method="post" class="mt-3">

    <div class="form-group col">
        <div class="offset-sm-2 col-sm-4">
            <select id="SearchType" name="SearchType" onchange="SearchTotalAmountByType();">

                <option value="">Select a Search Type</option>
                @foreach (string msg in ViewBag.message)
                {
                    <option value="@msg">@msg</option>
                }
            </select>
        </div>
    </div>

    
      <div class="form-group col" id="Text">
          <div class="offset-sm-2 col-sm-4">
              <label asp-for="Text"></label>
              @Html.TextBoxFor(m => m.Text)
          </div>
      </div>
    <!--
    <div class="form-group col" id="Text">
        <div class="col-sm-2"><label asp-for="Text" class="control-label"></label></div>
        <div class="col-sm-2"><input asp-for="Text" class="form-control" /></div>
        <div class="col"><span asp-validation-for="Text" class="text-danger"></span></div>
    </div>
    -->

    <div class="form-group col">
        <div class="offset-sm-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Search</button>
            <a asp-controller="Payment" asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>

</form>


@section Scripts
    {
    <script src="~/js/ChangeType.js"></script>
}
