@model MemberManagement.Models.Payment

@{
    string title = ViewBag.Action + " Payment";
    ViewBag.Title = title;
}
<h2>@ViewBag.Title</h2>
<hr />

<form asp-action="Edit" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="First_Name">First Name</label>
        <input asp-for="First_Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Last_Name">Last Name</label>
        <input asp-for="Last_Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Amount">Amount</label>
        <input type="hidden" asp-for="Amount" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Payment_Reason">Payment Reason</label>
        <input asp-for="Payment_Reason" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Payment_Type">Payment Type</label>
        <input asp-for="Payment_Type" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Receipt_Number">Receipt #</label>
        <input type="hidden" asp-for="Receipt_Number" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="ReceivedBy">Received By</label>
        <input asp-for="ReceivedBy" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="IsMember">IsMember?</label>
        <input asp-for="IsMember" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Payment_Date">Payment Date</label>
        <input asp-for="Payment_Date" class="form-control">
    </div>

    <input type="hidden" asp-for="PaymentID" />

    <!-- <button type="submit" class="btn btn-primary">@ViewBag.Action</button>-->
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="payment" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>

