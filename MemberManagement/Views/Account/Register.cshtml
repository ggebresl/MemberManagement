@model RegisterViewModel
@{
    ViewBag.Title = "User Register";
}

<h2 class="col-sm-4">User Register</h2>
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <!--  <div asp-validation-summary="All" class="text-danger"></div>-->

            <div class="form-group row">
                <div class="offset-1 col-sm-1"><label asp-for="FirstName"></label></div>
                <div class="offset-1 col-sm-4"><input asp-for="FirstName" class="form-control" /></div>
                <div class="col"><span asp-validation-for="FirstName" class="text-danger"></span></div>
            </div>

            <div class="form-group row">
                <div class="offset-1 col-sm-1"><label asp-for="LastName"></label></div>
                <div class="offset-1 col-sm-4"><input asp-for="LastName" class="form-control" /></div>
                <div class="col"><span asp-validation-for="LastName" class="text-danger"></span></div>
            </div>

            <div class="form-group row">
                <div class="offset-1 col-sm-1"><label asp-for="Phone"></label></div>
                <div class="offset-1 col-sm-4"><input asp-for="Phone" class="form-control" /></div>
                <div class="col"><span asp-validation-for="Phone" class="text-danger"></span></div>
            </div>

            <div class="form-group row">
                <div class="offset-1 col-sm-1"><label asp-for="Username"></label></div>
                <div class="offset-1 col-sm-4"><input asp-for="Username" class="form-control" /></div>
                <div class="col"><span asp-validation-for="Username" class="text-danger"></span></div>
            </div>
            <div class="form-group row">
                <div class="offset-1 col-sm-1"><label asp-for="Email"></label></div>
                <div class="offset-1 col-sm-4"><input asp-for="Email" class="form-control" /></div>
                <div class="col"><span asp-validation-for="Email" class="text-danger"></span></div>
            </div>

            <div class="form-group row">
                <div class="offset-1 col-sm-1"><label asp-for="Password"></label></div>
                <div class="offset-1 col-sm-4"><input asp-for="Password" class="form-control" /></div>
                <div class="col"><span asp-validation-for="Password" class="text-danger"></span></div>
            </div>

            <div class="form-group row">
                <div class="offset-1 col-sm-1"><label asp-for="ConfirmPassword"></label></div>
                <div class="offset-1 col-sm-4"><input asp-for="ConfirmPassword" class="form-control" /></div>
                <div class="col"><span asp-validation-for="ConfirmPassword" class="text-danger"></span></div>
            </div>

            <div class="form-group row">
                <div class="offset-sm-4 col-sm-5">
                    <button type="submit" class="btn btn-primary"><strong>Register</strong></button>
                    <a asp-controller="Payment" asp-action="Index" class="btn btn-primary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
