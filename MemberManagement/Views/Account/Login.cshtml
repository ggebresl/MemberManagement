@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<br />
<h2 class="col-sm-4">Login</h2>

<div asp-validation-summary="ModelOnly"  class="text-danger"></div>

<form class="border-da" method="post" asp-action="login">
    <div class="form-group row">
        <div class="offset-1 col-sm-1"><label asp-for="Username"></label></div>
        <div class="offset-1 col-sm-4"><input asp-for="Username" class="form-control" /></div>
        <div class="col"><span asp-validation-for="Username" class="text-danger"></span></div>
    </div>

    <div class="form-group row">
        <div class="offset-1 col-sm-1"><label asp-for="Password"></label></div>
        <div class="offset-1 col-sm-4"><input asp-for="Password" class="form-control" /></div>
        <div class="col"><span asp-validation-for="Password" class="text-danger"></span></div>
    </div>
    <!--
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-4">
            <input type="checkbox" title="Remember Me" asp-for="RememberMe"
                   class="form-check" />
            <label>Remember Me</label>
        </div>
    </div>
    -->
    <div class="row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary"><strong>Log In</strong></button>
        </div>
    </div>
    
    <div class="row">
        <div class="offset-2 col-sm-4">
            <a asp-action="ForgotPassword">Forgot Password?</a>
        </div>
    </div>
   
</form>

